// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Poll {
  id            Int        @id @default(autoincrement())
  title         String
  colorScheme   String
  hideVotes     Boolean
  startDate     DateTime
  endDate       DateTime
  backgroundURL String
  questions     Question[]
}

model Question {
  id       Int    @id @default(autoincrement())
  question String
  votes    Int
  poll     Poll   @relation(fields: [pollId], references: [id])
  pollId   Int
}
